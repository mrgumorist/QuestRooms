
@model PagedList<QuestRooms.BLL.DtoModels.RoomDto>
@using PagedList.Mvc;
@using PagedList;
<style>
    .ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: forestgreen;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: darkgreen;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }

    .questroom {
        padding-bottom: 20px;
    }
</style>
<h2>
    @{
        /**/
        @*foreach (var item in ViewBag.Name)
            {
                @item.Name;
            }*@
        /**/
    }
</h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-12 questroom">
                <div class="card text-center h-100 " >
                    <img class="card-img-top" src="https://picsum.photos/1900/1080?image=327" alt="Card image cap">
                    <div class="card-footer">
                        <h5 class="card-title">@item.Name</h5>
                    </div>
                    <div class="card-body" id="card">
                        @item.Description
                    </div>
                    <div class="card-footer">
                        <div> @item.TimeOfCompliting.Minutes <i class="fa fa-clock-o fa-lg" aria-hidden="true"></i> @item.Rating.ToString() <i class="fa fa-star fa-lg" aria-hidden="true"></i> @item.MinCountOfPlayers-@item.MaxCountOfPlayers <i class="fa fa-users fa-lg" aria-hidden="true"></i></div>
                        <hr />
                        <div class="btn btn-success btn-block w-100" onclick="location.href='@Url.Action("Indexxx","Rooms",new {id = @item.ID })'">Book now</div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
<div class="container">
    @Html.PagedListPager(Model, i => Url.Action("Index", "Rooms", new { i, search = Request.QueryString["search"] }))
</div>
